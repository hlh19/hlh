<!--pages/tansuo/tansuo.wxml-->
<view class="tansuo">
  <view class="tou">
    <text style="color:white; font-size:40rpx">探索</text>
    <image class="kuai" src="../img/fangkuai2.png"></image>
    <image class="kuai" bindtap="tansuo" src="../img/sikuai2.png"></image>
  </view>
  <view class="tuwen">
    <view class="row" wx:for="{{shuju}}" wx:key="*this">
      <view class="item">
        <image class="tu" src="{{item.tupian}}"></image>
        <view>
          <text style="color:white">{{item.content}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
